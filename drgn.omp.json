{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "color0": "#1a1a1a", 
    "color8": "#e5e5e5",
    "color1": "#ff0883",
    "color2": "#83ff08",
    "color3": "#ff8308",
    "color4": "#0883ff",
    "color5": "#8308ff",
    "color6": "#00f0f0",
    "color7": "#ffffff",
    "color9": "#ff0000",
    "color10": "#00ff00",
    "color11": "#f0f0f0",
    "color12": "#0000ff",
    "color13": "#f000f0",
    "color14": "#08ff83",
    "color15": "#5e5e5e",
    "foreground": "#ffffff", 
    "background": "#000000"
  },
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
	{ 
	  "foreground": "p:color4",
          "foreground_templates": ["{{ if gt .Code 0 }}p:color9{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": " \ue200  ",
	  "type": "status"
	},
        {
          "foreground": "p:color15",
          "properties": {
            "folder_icon": "\uf07b",
            "folder_separator_icon": " \ua718 ",
            "home_icon": "<p:color7>\ueef8 </> ",
            "style": "full",
	    "mapped_locations": {
	      "/copycat": "üêà"
	    }
          },
          "style": "diamond",
          "template": "{{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#ee79d1",
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "fetch_worktree_count": true
          },
          "style": "diamond",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "green",
          "style": "plain",
          "type": "text"
        },
        {
          "foreground": "yellow",
          "properties": {
            "style": "dallas",
            "threshold": 0
          },
          "style": "diamond",
          "template": " {{ .FormattedMs }}s <white>\udb84\udfab </>",
          "type": "executiontime"
        },
        {
          "properties": {
            "root_icon": "\uf292 "
          },
          "style": "diamond",
          "template": " \uf0e7 ",
          "type": "root"
        },
        {
          "foreground": "cyan",
          "style": "diamond",
          "template": " <p:color6>MEM:</> {{ round .PhysicalPercentUsed .Precision }}% ({{ (div ((sub .PhysicalTotalMemory .PhysicalFreeMemory)|float64) 1073741824.0) }}/{{ (div .PhysicalTotalMemory 1073741824.0) }}GB)",
          "type": "sysinfo"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
	  "foreground": "p:color1",
          "foreground_templates": ["{{ if gt .Code 0 }}p:color3{{ end }}"],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": " \ue285  ",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{ .Folder }}",
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#FEF5ED",
    "template": "\ue285 "
  },
  "version": 2
}
